stripHTML {
  chars = char+
  char =
    | "<i " nonRB+ ">" -- italicWithAttr
    | "<i>" -- italicNoAttr
    | "</i>" -- closeItalic
    | "<b " nonRB+ ">" -- boldWithAttr
    | "<b>" -- boldNoAttr
    | "</b>" -- closeBold
    | "<span " nonRB+ ">" -- spanWithAttr
    | "<span>" -- spanNoAttr
    | "</span>" -- closeSpan

    | "<br " nonRB+ ">" -- brWithAttr
    | "<br>" -- brNoAttr
    | "</br>" -- closeBr

    | any -- other    

  nonRB = ~">" any
}
